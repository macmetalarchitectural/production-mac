<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_paint_batch_track" model="ir.ui.view">
        <field name="name">Product Template: Add Paint Batch Track</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <field name="tracking" position="after">
                <field name="paint_batch_track"
                       attrs="{'invisible':[('tracking', 'not in', ['lot', 'serial'])]}"
                />
            </field>
        </field>
    </record>

</odoo>
