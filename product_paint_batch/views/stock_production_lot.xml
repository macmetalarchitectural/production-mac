<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_production_lot_paint_batch_form" model="ir.ui.view">
        <field name="name">Stock Production Lot Form: Add Paint Batch</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="paint_batch"/>
            </field>
        </field>
    </record>

    <record id="stock_production_lot_paint_batch_tree" model="ir.ui.view">
        <field name="name">Stock Production Lot Tree: Add Paint Batch</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="paint_batch"/>
            </field>
        </field>

    </record>

    <record id="stock_production_lot_paint_batch_search" model="ir.ui.view">
        <field name="name">Stock Production Lot Search: Add Paint Batch</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="paint_batch"/>
            </field>
            <filter name="group_by_product" position="after">
                <filter name="group_by_paint_batch"
                        string="Paint Batch"
                        domain="[]"
                        context="{'group_by': 'paint_batch'}"
                />
            </filter>
        </field>
    </record>

    <data noupdate="1">
        <record id="res_config_paint_batch_length" model="ir.config_parameter">
            <field name="key">product_paint_batch.paint_batch_length</field>
            <field name="value">5</field>
        </record>
    </data>
</odoo>

