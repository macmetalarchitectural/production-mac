<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="sale_quotation_list_with_total_hidden" model="ir.ui.view">
        <field name="name">Sale Quotation: hide total amount</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="sum"></attribute>
            </field>
        </field>
    </record>

    <record id="sale_order_list_with_total_hidden" model="ir.ui.view">
        <field name="name">Sale Order: hide total amount</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="sum"></attribute>
            </field>
        </field>
    </record>

    <record id="sale_quotation_list_with_total_shown" model="ir.ui.view">
        <field name="name">Sale Quotation: show total to sale user</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale_quotation_list_with_total_hidden"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="sum">Total Tax Included</attribute>
            </field>
        </field>
    </record>

    <record id="sale_order_list_with_total_shown" model="ir.ui.view">
        <field name="name">Sale Order: show total to sale user</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale_order_list_with_total_hidden"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="attributes">
                <attribute name="sum">Total Tax Included</attribute>
            </field>
        </field>
    </record>

    <!-- Remove graph and pivot table from `Quotation` and `Sale Order` menu items -->
    <record id="sale.action_orders" model="ir.actions.act_window">
        <field name="view_mode">tree,form,calendar,kanban</field>
    </record>

    <record id="sale.action_quotations" model="ir.actions.act_window">
        <field name="view_mode">tree,form,calendar,kanban</field>
    </record>

    <record id="sale.action_orders_upselling" model="ir.actions.act_window">
        <field name="view_mode">tree,form,calendar,kanban</field>
    </record>

    <record id="sale.action_orders_to_invoice" model="ir.actions.act_window">
        <field name="view_mode">tree,form,calendar,kanban</field>
    </record>

    <!-- Add a new sale order menu item with graph and pivot views -->
    <record id="sale_order_action_with_graph_and_pivot" model="ir.actions.act_window">
        <field name="name">Sales Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
    </record>

    <menuitem id="menu_sale_order"
        name="Sale Orders"
        action="sale_order_action_with_graph_and_pivot"
        parent="sale.menu_sale_report"
        sequence="0"
        groups="sales_team.group_sale_salesman_all_leads"
        />
    

</odoo>
