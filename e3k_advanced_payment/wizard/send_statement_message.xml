<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="send_payment_notification_view" model="ir.ui.view">
        <field name="name">send.payment.notification.form</field>
        <field name="model">send.payment.notification</field>
        <field name="arch" type="xml">
            <form string="Send Payment Notification">
                <sheet>
                    <group string="Partners">
                        <field name="partner_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Send" name="send_message_view" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_send_payment_notification" model="ir.actions.act_window">
        <field name="name">Send Payment Notification</field>
        <field name="res_model">send.payment.notification</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
