<?xml version="1.0"?>
<odoo>
    <record id="view_payment_term_form" model="ir.ui.view">
        <field name="name">account.payment.term</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="payment_discount_percent"/>
                <field name="number_discount_days"/>
                <field name="product_category_ids" widget="many2many_tags"/>
            </field>
            <field name="line_ids" position="after">
                <group>
                    <field name="payment_term_discount_ids">
                        <tree editable="bottom">
                            <field name="company_id"/>
                            <field name="payment_discount_account"/>
                            <field name="customer_default_analytic_compte" groups="analytic.group_analytic_accounting"/>
                            <field name="payment_supplier_discount_account"/>
                            <field name="supplier_default_analytic_compte" groups="analytic.group_analytic_accounting"/>
                        </tree>
                    </field>
                </group>
            </field>
        </field>
    </record>
</odoo>
