<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="font_size_view_picking_form" model="ir.ui.view">
    <field name="name">font.size.view.picking.form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='note']" position="attributes">
        <attribute name="style">font-size: 18px; font-weight: bold;</attribute>
      </xpath>
    </field>
  </record>
</odoo>
