<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_stock_quant_tree_inventory_editable" model="ir.ui.view">
    <field name="name">stock.quant.inventory.tree.editable</field>
    <field name="model">stock.quant</field>
    <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='user_id']" position="after">
        <field name="note"/>
      </xpath>
    </field>
  </record>

  <record id="quant_search_view" model="ir.ui.view">
    <field name="name">stock.quant.search</field>
    <field name="model">stock.quant</field>
    <field name="inherit_id" ref="stock.quant_search_view"/>
    <field name="arch" type="xml">
      <xpath expr="//filter[@name='internal_loc']" position="before">
        <filter name='displayable_loc' string="Displayable Locations" domain="[('location_id.show_loc_inv_adj' ,'=', True)]"/>
        <separator/>
      </xpath>
    </field>
  </record>

</odoo>
