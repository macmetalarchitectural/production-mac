<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="frontend_layout" inherit_id="web.frontend_layout" primary="True">
      <xpath expr="//head/t[@t-call-assets][last()]" position="after">
        <t t-call-assets="e3k_macmetal.sale_assets" lazy_load="True"/>
      </xpath>
    </template>

    <template id="sale_order_portal_template" inherit_id="sale.sale_order_portal_template">
      <xpath expr="//t[@t-set='default_name']" position="attributes">
        <attribute name="t-value">''</attribute>
      </xpath>

      <xpath expr="//main[@id='sign-dialog']/p/ul" position="inside">
        <t t-call-assets="e3k_macmetal.sale_assets" lazy_load="True"/>
        <li t-if="request.env['ir.config_parameter'].sudo().get_param('e3k_macmetal.use_delivery_terms')">
          <span>With delivery terms:</span> <span t-field="res_company.delivery_terms"/>
        </li>
      </xpath>

      <xpath expr="//main[@id='sign-dialog']/p/ul" position="after">
        <label>Customer Reference:</label> <span t-field="sale_order.client_order_ref"/>
      </xpath>
    </template>

  </data>
</odoo>