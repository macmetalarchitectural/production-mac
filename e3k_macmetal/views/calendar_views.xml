<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <record id="view_calendar_event_tree_inherited" model="ir.ui.view">
    <field name="name">calendar.event.tree.e3k_macmetal</field>
    <field name="model">calendar.event</field>
    <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='partner_ids']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='location']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='name']" position="before">
        <field name="user_id" string="Sales Rep"/>
      </xpath>

      <xpath expr="//field[@name='stop']" position="after">
        <field name="categ_ids" string="Meeting Type" widget="many2many_tags"/>
        <field name="description" string="Description"/>
      </xpath>
    </field>
  </record>

  <record id="view_calendar_event_pivot" model="ir.ui.view">
    <field name="name">calendar.event.view.pivot</field>
    <field name="model">calendar.event</field>
    <field name="arch" type="xml">
      <pivot string="Meetings" disable_linking="1">
        <field name="name" type="row"/>
        <field name="user_id" type="col"/>
        <field name="duration" type="measure"/>
      </pivot>
    </field>
  </record>

  <record id="action_view_calendar_event_pivot" model="ir.actions.act_window.view">
    <field name="act_window_id" ref="calendar.action_calendar_event"/>
    <field name="sequence" eval="2"/>
    <field name="view_mode">pivot</field>
    <field name="view_id" ref="view_calendar_event_pivot"/>
  </record>

</odoo>
