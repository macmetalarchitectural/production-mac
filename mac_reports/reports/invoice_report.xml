<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_mac" inherit_id="e3k_default_reports.report_invoice_baleco">
        <xpath expr="//div[@name='comment']" position="replace">
            <div t-if="not is_html_empty(o.narration)" name="comment">
                <table class="table">
                    <tr>
                        <td style="background-color:#FFFFFF; color: black; font-size: 11px !important;">
                            <span t-field="o.narration"/>
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
        <xpath expr="//p[@name='payment_term']" position="attributes">
            <attribute name="style">display: none !important</attribute>
        </xpath>
        <xpath expr="//div[@id='informations']//div[@name='invoice_date']" position="after">

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_payment_term_id" name="payment_term">
                <strong>Payment terms:</strong>
                <p class="m-0" t-field="o.invoice_payment_term_id"/>
            </div>
        </xpath>
    </template>
</odoo>