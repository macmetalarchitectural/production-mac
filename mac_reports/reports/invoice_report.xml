<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_mac" inherit_id="e3k_default_reports.report_invoice_baleco">
        <xpath expr="//div[@name='comment']" position="replace">
            <div t-if="not is_html_empty(o.narration)" name="comment">
                <table class="table">
                    <tr>
                        <td style="background-color:#FFFFFF; color: black; font-size: 11px !important;">
                            <span t-field="o.narration"/>
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
        <xpath expr="//p[@name='payment_term']" position="replace">
        </xpath>
        <xpath expr="//p[@name='payment_communication']" position="replace">
        </xpath>
        <xpath expr="//div[@id='informations']//div[@name='invoice_date']" position="after">

            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_payment_term_id" name="payment_term">
                <strong>Payment terms:</strong>
                <p class="m-0" t-field="o.invoice_payment_term_id"/>
            </div>
        </xpath>
        <xpath expr="//div[@id='qrcode']" position="after">

            <br/>
            <br/>
            <br/>
            <div style="border: 1px solid #000; padding: 10px; background-color:#FFFFFF; color: black; font-size: 11px !important;  border-top: 1px solid black;
font-weight: bold; page-break-inside: avoid;">
                <p t-field="o.invoice_note_terms"/>
            </div>
        </xpath>
    </template>

    <template id="report_invoice_mac_report2" inherit_id="account.report_invoice">
        <xpath expr="//t[@t-set='lang']" position="replace">
            <t t-set="lang" t-value="o.partner_id.lang"/>
        </xpath>
    </template>
    <!--    payment2-->
    <template id="report_invoice_mac_with_payments2" inherit_id="account.report_invoice_with_payments">
        <xpath expr="//t[@t-set='lang']" position="replace">
            <t t-set="lang" t-value="o.partner_id.lang"/>
        </xpath>
    </template>
</odoo>