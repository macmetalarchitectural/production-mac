        <!--                        <div t-field="o.dest_address_id"-->
        <!--                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'-->
        <!--                             name="purchase_shipping_address"/>-->
        <!--                    </div>-->

        <!--                </t>-->
        <!--            </t>-->
        <!--        </xpath>-->


    </template>
    <template id="report_purchase_mac2" inherit_id="purchase_stock.report_purchaseorder_document">
        <xpath expr="//t[@t-else='']//t[@t-set='information_block']" position="replace">
            <t t-set="information_block">
                <strong>Supplier:</strong>
                <div t-field="o.partner_id"
                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                    <span t-field="o.partner_id.vat"/>
                </p>
            </t>
        </xpath>
    </template>
     <template id="report_purchase_quotation_mac2" inherit_id="purchase_stock.report_purchasequotation_document">
        <xpath expr="//t[@t-else='']//t[@t-set='information_block']" position="replace">
            <t t-set="information_block">
                <strong>Supplier:</strong>
                <div t-field="o.partner_id"
                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                    <span t-field="o.partner_id.vat"/>
                </p>
            </t>
        </xpath>
    </template>
    <template id="report_purchase_quotation_mac" inherit_id="e3k_default_reports.report_purchase_quotation_baleco">
        <xpath expr="//h2" position="after">
            <div id="informations" class="row mt32 mb32">
                <div t-if="o.date_approve" class="col-3 bm-2">
                    <strong>Date:</strong>
                    <p t-field="o.date_approve" class="m-0" t-options='{"format": "MM/dd/yyyy"}'/>
                </div>
                <div t-if="o.partner_ref" class="col-3 bm-2">
                    <strong>Supplier:</strong>
                    <p t-field="o.partner_ref" class="m-0"/>
                </div>
                <div t-if="o.origin" class="col-3 bm-2">
                <strong>Origin:</strong>
                <p t-field="o.origin" class="m-0"/>
            </div>

            </div>

        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
                <strong>Shipping address:</strong>
                <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id">
                    <span t-field="o.picking_type_id.warehouse_id.name"/>
                    <div t-field="o.picking_type_id.warehouse_id.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "phone"], "no_marker": True, "phone_icons": True}'/>
                </div>
            </t>

        </xpath>

    </template>

</odoo>