<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_mac" inherit_id="e3k_default_reports.report_purchase_baleco">
        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div t-if="o.origin" class="col-3 bm-2">
                <strong>Origin:</strong>
                <p t-field="o.origin" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-if="o.dest_address_id">
                <t t-set="address">
                    <strong>Shipping address:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'
                             name="purchase_shipping_address"/>
                    </div>

                </t>
            </t>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="information_block">
                <strong>Supplier:</strong>
                <div t-field="o.partner_id"
                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                    <span t-field="o.partner_id.vat"/>
                </p>
            </t>
        </xpath>


    </template>
</odoo>