<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="show_date_deadline_view_picking_form_inherit" model="ir.ui.view">
            <field name="name">show.date.deadline.view.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]/group[2]/field[@name='date_deadline']" position="attributes">
                    <attribute name="attrs">{'invisible': [('state', 'in', ('done', 'cancel'))]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>