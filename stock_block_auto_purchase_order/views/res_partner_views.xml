<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_form_with_block_auto_po" model="ir.ui.view">
        <field name="name">res.partner: Add block_auto_po field</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//field[@name='supplier']" position="after">
                <field name="block_auto_purchase_order" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="partner_form_with_block_auto_po_editable_by_admin" model="ir.ui.view">
        <field name="name">res.partner: Enable editing block_auto_po field by admin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_form_with_block_auto_po"/>
        <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
        <field name="arch" type="xml">
            <field name="block_auto_purchase_order" position="attributes">
                <attribute name="readonly">0</attribute>
            </field>
        </field>
    </record>
</odoo>
