<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="sale_order_form_view_inherited_add_notes" model="ir.ui.view">
        <field name="name">sale_order_form_view_inherited_add_notes</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='note']" position="before">
                <field name="sale_note_termes" nolabel="1"
                        placeholder="The Administrator can set default Terms &amp; Conditions in Sales Settings"/>
            </xpath>

         </field>
     </record>
</odoo>
