<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_sale_e3k" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-if="doc.partner_shipping_id == doc.partner_invoice_id">
                <strong>Invoicing and Shipping Address:</strong>
                <div t-field="doc.partner_invoice_id"
                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            </t>
            <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                <div class="row">
                    <div t-if="doc.partner_invoice_id" class="col-6">
                        <div>
                            <strong>Invoicing Address:</strong>
                            <div t-field="doc.partner_invoice_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                    <div t-if="doc.partner_shipping_id" class="col-5 offset-1">
                        <div>
                            <strong>Shipping Address:</strong>
                            <div t-field="doc.partner_shipping_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                </div>
            </t>

        </xpath>
        <xpath expr="//t[@t-set='information_block']" position="replace">
            <t t-set="information_block"/>

        </xpath>

        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">margin-top:20px;</attribute>
        </xpath>

        <xpath expr="//p[@t-field='doc.note']" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
        <xpath expr="//p[@t-field='doc.note']" position="after">
            <p t-field="doc.sale_note_termes"/>
        </xpath>


        <xpath expr="//div[@id='informations']/div[@t-if='doc.client_order_ref']" position="replace">
            <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                <strong>Customer reference:</strong>
                <p class="m-0" t-field="doc.client_order_ref"/>
            </div>
        </xpath>

        <xpath expr="//div[@id='informations']/div[2]"
               position="replace">
            <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                <strong>Order Date:</strong>
                <p class="m-0" t-field="doc.date_order" t-options='{"format": "MM/dd/yyyy"}'/>
            </div>
        </xpath>
        <xpath expr="//div[@id='informations']/div[2]"
               position="after">
            <div t-if="doc.commitment_date" class="col-auto col-3 mw-100 mb-2">
                <strong>Commitment date:</strong>
                <p class="m-0" t-field="doc.commitment_date" t-options='{"format": "MM/dd/yyyy"}'/>
            </div>
        </xpath>
        <xpath expr="//div[@id='informations']/div[3]"
               position="after">
            <div name="payemnt_terms" t-if="doc.payment_term_id" class="col-auto col-3 mw-100 mb-2">
                <strong>Payment Terms:</strong>
                <p class="m-0" t-field="doc.payment_term_id.name"/>
            </div>
        </xpath>


        <xpath expr="//table[1]" position="replace">
            <table class="table table-sm o_main_table">
                <t t-set="check_is_default_code" t-value="doc._compute_print_default_code()"/>
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_ref" class="text-left" t-if="check_is_default_code">Product number</th>
                        <th name="th_description" class="text-left">Product</th>
                        <th name="th_quantity" class="text-right">Quantity</th>
                        <th name="th_priceunit" class="text-right">Unit Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-right"
                            groups="product.group_discount_per_so_line">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                           groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                           groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="account_sale_line_code" t-if="check_is_default_code">
                                    <span t-field="line.product_id.default_code" t-options="{'widget': 'text'}"/>
                                </td>
                                <td name="td_name">
                                    <span t-field="line.name"/>
                                    <!--                                        <span t-esc="line.product_id.display_name" t-options="{'widget': 'text'}"/>-->
                                </td>

                                <td name="td_quantity" class="text-right">
                                    <span t-esc="line.product_uom_qty"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </td>

                                <td name="td_priceunit" class="text-right">
                                    <span t-esc="line.price_unit" t-options='{"widget": "float", "precision": 2}'/>
                                </td>
                                <td t-if="display_discount" class="text-right"
                                    groups="product.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>

                                <td name="td_subtotal" class="text-right o_price_total">
                                    <span t-field="line.price_subtotal"
                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total"
                                          groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

        </xpath>

        <xpath expr="//h2" position="replace">
            <h2 class="mt16">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                    <span t-if="doc.state not in ['draft','sent']">Order N°</span>
                    <span t-if="doc.state in ['draft','sent']">Quotation N°</span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Pro-Forma Invoice N°</span>
                </t>
                <span t-field="doc.name"/>
            </h2>
        </xpath>
    </template>
</odoo>