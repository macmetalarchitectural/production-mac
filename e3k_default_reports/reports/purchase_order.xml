<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_baleco" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@t-if='o.date_order']" position="replace">
            <div t-if="o.date_order" class="col-3 bm-2">
                <strong>Order Date:</strong>
                <p t-field="o.date_order" class="m-0" t-options='{"format": "MM/dd/yyyy"}'/>
            </div>
        </xpath>
        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div t-if="o.payment_term_id" class="col-3 bm-2">
                <strong>Payment Terms:</strong>
                <p t-field="o.payment_term_id" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//div[@t-if='o.partner_ref']" position="replace">
            <div t-if="o.partner_ref" class="col-3 bm-2">
                <strong>Supplier reference:</strong>
                <p t-field="o.partner_ref" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//h2[1]" position="replace">
            <h2 t-if="o.state == 'draft'">Request for Quotation N°
                <span t-field="o.name"/>
            </h2>
            <h2 t-if="o.state in ['sent', 'to approve']">Purchase Order N°
                <span t-field="o.name"/>
            </h2>
        </xpath>
        <xpath expr="//h2[2]" position="replace">
            <h2 t-if="o.state in ['purchase', 'done']">Purchase Order N°
                <span t-field="o.name"/>
            </h2>
        </xpath>
        <xpath expr="//h2[3]" position="replace">
            <h2 t-if="o.state == 'cancel'">Cancelled Purchase Order N°
                <span t-field="o.name"/>
            </h2>
        </xpath>
        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">margin-top:30px;</attribute>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
                <strong>Supplier:</strong>
                <div t-field="o.partner_id"
                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                    <span t-field="o.partner_id.vat"/>
                </p>
            </t>

        </xpath>

        <xpath expr="//table[1]" position="replace">
            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th name="th_ref" class="text-left">Product number</th>

                        <th name="th_description">
                            <strong>Product</strong>
                        </th>

                        <th name="th_date_req" class="text-center">
                            <strong>Date Req.</strong>
                        </th>
                        <th name="th_quantity" class="text-right">
                            <strong>Qty</strong>
                        </th>
                        <th name="th_price_unit" class="text-right">
                            <strong>Unit Price</strong>
                        </th>
                        <th name="th_amount" class="text-right">
                            <strong>Amount</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                           groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                           groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="account_sale_line_code">
                                    <span t-field="line.product_id.default_code" t-options="{'widget': 'text'}"/>
                                </td>
                                <td id="product">
                                    <span t-esc="line.get_name_no_ref()"/>
                                </td>

                                <td class="text-center">
                                    <span t-field="line.date_planned" t-options='{"format": "MM/dd/yyyy"}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line.product_qty"/>
                                    <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="line.price_unit" />
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99" id="subtotal">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

        </xpath>
    </template>
    <template id="report_purchase_quotation_baleco" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">margin-top:30px;</attribute>
        </xpath>
        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
                <strong>Supplier:</strong>

                <div t-field="o.partner_id"
                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                    <span t-field="o.partner_id.vat"/>
                </p>
            </t>

        </xpath>
        <xpath expr="//h2" position="replace">
            <h2>Request for Quotation N°
                <span t-field="o.name"/>
            </h2>
        </xpath>
        <xpath expr="//table[1]" position="replace">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th name="th_ref" class="text-left">Product number</th>
                        <th name="th_description">
                            <strong>Product</strong>
                        </th>
                        <th name="th_expected_date" class="text-center">
                            <strong>Expected Date</strong>
                        </th>
                        <th name="th_quantity" class="text-right">
                            <strong>Qty</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                                <td id="ref">
                                    <span t-esc="order_line.product_id.default_code"/>
                                </td>
                                <td id="product">
                                    <span t-esc="order_line.get_name_no_ref()"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="order_line.date_planned" t-options='{"format": "MM/dd/yyyy"}'/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

        </xpath>

    </template>

</odoo>