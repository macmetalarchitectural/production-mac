<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_baleco" inherit_id="stock.report_delivery_document">
        <xpath expr="//h2" position="replace">
            <h2 style=" margin-top :30px">
                <span>Delivery slip NÂ°</span>
                <span t-field="o.name"/>
            </h2>
        </xpath>

        <xpath expr="//t[@t-set='partner']" position="after">
            <t t-set="address">
                <div style="display:none" t-esc="partner"
                     t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
            </t>
            <t t-if="partner" name="partner_header">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>
                    <div t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </t>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('page')]//div[1]" position="replace"/>

        <xpath expr="//t[@t-if='partner']" position="after">
            <t t-if="partner" name="partner_header">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>

                    <div t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                </t>
            </t>
        </xpath>


        <xpath expr="//table[1]" position="replace">
            <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                <thead>
                    <tr>
                        <th name="th_sm_product">
                            <strong>Product</strong>
                        </th>
                        <th name="th_sm_quantity">
                            <strong>Quantity</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                    <tr t-foreach="lines" t-as="move">
                        <td>
                            <span t-field="move.product_id"/>
                            <p t-if="move.description_picking != move.product_id.name">
                                <span t-field="move.description_picking"/>
                            </p>
                        </td>
                        <td>
                            <span t-esc="move.product_uom_qty"/>
                            <span t-field="move.product_uom"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>

    </template>
    <template inherit_id="stock.stock_report_delivery_aggregated_move_lines" id="stock_report_delivery_aggregated_move_lines_inherit">
        <xpath expr="//td[@name='move_line_aggregated_qty_done']" position="replace">
            <td class="text-center" name="move_line_aggregated_qty_done">
                <span t-esc="aggregated_lines[line]['qty_done']"
                    t-options="{'widget': 'float', 'decimal_precision': 'Product Unit of Measure'}"/>
                <span t-esc="aggregated_lines[line]['product_uom']"/>
            </td>
        </xpath>
    </template>
    <template id="report_delivery_st_baleco" inherit_id="sale_stock.report_delivery_document_inherit_sale_stock">
        <xpath expr="//div[hasclass('page')]/div" position="replace">
            <div class="row mt32 mb32">
                <div class="col-auto" t-if="o.sudo().sale_id.client_order_ref">

                    <div>
                        <strong>Customer Reference:</strong>
                        <p t-field="o.sudo().sale_id.client_order_ref"/>
                    </div>
                </div>
                <div t-if="o.state" class="col-auto" name="div_sched_date">
                    <strong>Shipping Date:</strong>
                    <t t-if="o.state == 'done'">
                        <p t-field="o.date_done" t-options='{"format": "MM/dd/yyyy"}'/>
                    </t>
                    <t t-if="o.state != 'done'">
                        <p t-field="o.scheduled_date" t-options='{"format": "MM/dd/yyyy"}'/>
                    </t>
                </div>
                <div t-if="o.origin" class="col-auto" name="div_origin">
                    <strong>Internal order:</strong>
                    <p t-field="o.origin"/>
                </div>
            </div>
        </xpath>

    </template>

</odoo>