<?xml version="1.0"?>
<odoo>
    <record id="e3k_vpicktree" model="ir.ui.view">
            <field name="name">e3k.stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="note" optional="show"/>
                    <field name="delivery_pickup" widget="boolean_toggle"/>
                    <field name="worksite_ready" widget="boolean_toggle"/>
                    <field name="flexible_date" widget="boolean_toggle"/>
                  </xpath>
            </field>
        </record>

    <record id="e3k_view_picking_form" model="ir.ui.view">
            <field name="name">e3k.stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="delivery_pickup" string="Delivery-Pickup confirmed" force_save="True" attrs="{&quot;readonly&quot;: [[&quot;state&quot;,&quot;in&quot;,[&quot;done&quot;,&quot;cancel&quot;]]]}"/>
                    <field name="delivery_pickup" string="Delivery-Pickup confirmed" widget="boolean_toggle"/>
                    <field name="worksite_ready" widget="boolean_toggle"/>
                    <field name="flexible_date" widget="boolean_toggle"/>
                  </xpath>
            </field>
        </record>
</odoo>
