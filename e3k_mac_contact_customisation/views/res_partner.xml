            <field name="name">res.partner.form.inherit.ca</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="l10n_ca.res_partner_form_inherit_ca"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="replace"/>
                <xpath expr="//field[@name='l10n_ca_pst']" position="replace"/>
                <xpath expr="//field[@name='category_id']" position="replace"/>
                <xpath expr="//field[@name='industry_id']" position="replace"/>
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//group[@name='accounting_entries']" position="inside">
                    <field name="vat"/>
                    <field name="l10n_ca_pst"/>
                    <field name="category_id" widget="many2many_tags"
                           options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Tags..."/>
                </xpath>

                <xpath expr="//div[hasclass('o_address_format')]" position="after">
                    <field name="contact_status_id" placeholder="Status..."
                           options="{'no_open': True, 'no_create': True}" string="Status"/>

                    <field name="industry_id"
                           options="{'no_create': True}" string="Customer type"/>
                </xpath>

