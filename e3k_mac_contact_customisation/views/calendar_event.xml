<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_calendar_event_form_inherit" model="ir.ui.view">
            <field name="name">calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="replace">
                    <div class="oe_title mb-3">
                        <div>
                            <label for="meeting_type_id" string="Meeting type: "/>
                            <field name="meeting_type_id" class="oe_inline"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//field[@name='start']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='stop']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_calendar_event_tree_inherited" model="ir.ui.view">
            <field name="name">calendar.event.tree.contact.info</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="team_id" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="company_partner_id" optional="show" string="Company name"/>
                    <field name="partner_id" optional="show" string="Contact"/>
                    <!--                    <field name="customer_state" optional="show" string="status"/>-->
                    <field name="meeting_type_id" optional="show"/>
                    <field name="function" optional="show"/>
                    <field name="contact_ids" widget="many2many_tags"/>

                </xpath>
            </field>
        </record>

        <record id="view_calendar_event_search_inherited" model="ir.ui.view">
            <field name="name">calendar.event.search.contact.info</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="team_id" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="company_partner_id" string="Company name"/>
                    <field name="partner_id" string="Contact"/>
                    <field name="customer_state" string="status"/>
                    <field name="function"/>
                    <field name="meeting_type_id"/>

                </xpath>
                <xpath expr="//filter[@name='recurrent']" position="after">


                    <filter string="Company name" name="company_partner_id" domain="[]"
                            context="{'group_by':'company_partner_id'}"/>
                    <filter string="Contact" name="partner_id" domain="[]"
                            context="{'group_by':'partner_id'}"/>
                    <filter string="Customer state" name="customer_state" domain="[]"
                            context="{'group_by':'customer_state'}"/>
                    <filter string="Industry type" name="function" domain="[]"
                            context="{'group_by':'function'}"/>
                    <filter string="Meeting type" name="meeting_type_id" domain="[]"
                            context="{'group_by':'meeting_type_id'}"/>
                </xpath>
            </field>
        </record>
        <record id="view_calendar_pivot_inherited" model="ir.ui.view">
            <field name="name">calendar.event.pivot.contact.info</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="e3k_macmetal.view_calendar_event_pivot"/>
            <field name="arch" type="xml">
                <xpath expr="//pivot" position="inside">
                    <field name="company_partner_id"/>
                    <field name="function" string="Industry type"/>
                    <field name="customer_state"/>
                </xpath>
            </field>
        </record>

        <record id="action_activity_dashboard" model="ir.actions.client">
            <field name="name">Dashboard</field>
            <field name="tag">activity_dashboard</field>
        </record>
        <menuitem
                id="activity_dashboard_menu"
                name="Activity analysis"
                parent="calendar.mail_menu_calendar"
                action="action_activity_dashboard"
                sequence="0"
        />

    </data>
</odoo>
