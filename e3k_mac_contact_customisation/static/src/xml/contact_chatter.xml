<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-inherit="mail.ChatterTopbar" t-inherit-mode="extension">
        <xpath expr="//t[@t-if='chatter.hasActivities']" position="replace">
            <t t-if="chatter.hasActivities">
                <button class="btn btn-link o_ChatterTopbar_button o_ChatterTopbar_buttonScheduleActivity" type="button" t-att-disabled="chatter.isDisabled" t-on-click="chatter.onClickScheduleActivity" title="Schedule an activity"
                        data-hotkey="shift+a">
                    <i class="fa fa-clock-o"/>
                    <t t-if="chatter.thread.model === 'res.partner'">To do</t>
                    <t t-else="">Schedule activity</t>
                </button>
                <button class="btn btn-link o_ChatterTopbar_button o_ChatterTopbar_buttonScheduleActivity" type="button" t-att-disabled="chatter.isDisabled" t-on-click="chatter.onClickScheduleMeeting" title="Schedule an activity"
                        data-hotkey="shift+a">
                    <i class="fa fa-clock-o"/>
                    <t t-if="chatter.thread.model === 'res.partner'">Schedule activity</t>
                </button>
            </t>
        </xpath>
    </t>
</templates>
